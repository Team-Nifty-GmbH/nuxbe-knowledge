{
    "name": "team-nifty-gmbh/nuxbe-knowledge",
    "description": "Wiki/Knowledge Base package for Nuxbe ERP",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "TeamNiftyGmbH\\NuxbeKnowledge\\": "src/",
            "TeamNiftyGmbH\\NuxbeKnowledge\\Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "TeamNiftyGmbH\\NuxbeKnowledge\\Tests\\": "tests/",
            "TeamNiftyGmbH\\NuxbeKnowledge\\Database\\Factories\\": "database/factories/"
        }
    },
    "authors": [
        {
            "name": "Team Nifty GmbH",
            "email": "dev@team-nifty.com"
        }
    ],
    "extra": {
        "laravel": {
            "providers": [
                "TeamNiftyGmbH\\NuxbeKnowledge\\NuxbeKnowledgeServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^8.4",
        "laravel/pint": "^1.25",
        "team-nifty-gmbh/flux-erp": "dev-main",
        "league/commonmark": "^2.0",
        "league/html-to-markdown": "^5.0",
        "jfcherng/php-diff": "^6.0"
    },
    "require-dev": {
        "brianium/paratest": "^7.0",
        "orchestra/testbench": "^10.0",
        "pestphp/pest": "^4.0.4",
        "pestphp/pest-plugin-livewire": "^4.0"
    },
    "scripts": {
        "testbench": "./vendor/bin/testbench package:test",
        "test": [
            "@test-feature",
            "@test-livewire",
            "@test-unit"
        ],
        "test-feature": "@testbench --parallel --testsuite Feature",
        "test-livewire": "@testbench --parallel --testsuite Livewire",
        "test-unit": "@testbench --parallel --testsuite Unit",
        "lint": "./vendor/bin/pint --test",
        "format": "./vendor/bin/pint"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    }
}
